{
  "info": {
    "name": "Bookstore API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Bookstore API endpoints"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"john_doe\", \"password\": \"secret123\"}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"john_doe\", \"password\": \"secret123\"}"
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ]
            }
          }
        },
        {
          "name": "Add Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Clean Code\", \"author\": \"Robert C. Martin\", \"price\": 39.99}"
            }
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books/123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books",
                "123"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Clean Code (Updated)\", \"author\": \"Robert C. Martin\", \"price\": 42.99}"
            }
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books/123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books",
                "123"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "View Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"bookId\": \"123\", \"quantity\": 2}"
            }
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart/123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart",
                "123"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"quantity\": 3}"
            }
          }
        },
        {
          "name": "Remove Cart Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/cart/123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart",
                "123"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwtToken",
      "value": ""
    }
  ]
}